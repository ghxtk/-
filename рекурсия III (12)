#include <iostream> 
using namespace std;

// печатает звездочки указанное кол-во раз
void zv(int zz)
{
	for (int j = 0; j < zz; j++)
	{
		cout<<"*";
	}
}

// печатает пробелы указанное кол-во раз
void pr(int n)
{
	for (int i = 0; i < n; i++)
	{
		cout<<" ";
	}
}

// печатает ромб принимая значения кол-ва строк и уровень оступа
void f(int n, int z)
{
	if (z >= 1)
	{
		if (n > 0)  // печатает верхнюю часть ромба
		{
			zv(z);  //печать звездочек
			pr(n);     //печать пробела
			zv(z);  //снова печать звездочек
			cout<<endl;
			z++; //увеличиваем уровень отступа
			f(n - 2, z); //рекурсивный вызов 
		}
		else {
			if (n == 0)  //печатает среднюю строку ромба
			{
				zv(z);  //печатаем ток звездочки
				zv(z);
				cout<<endl;
				f(n - 2, z); //рекурсивный вызов с тем же уровнем отступа
			}
			else {  //печатает нижнюю часть ромба
				z--;
				zv(z);
				pr(-n);
				zv(z);
				cout<<endl;
				f(n - 2, z);
			}
		}
	}
}
int main()
{
	int n; cin>>n;
	int z = 1;
	f(n, z);
}
//10
